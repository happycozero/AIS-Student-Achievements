<Window x:Class="Student_Achievements.Forms.Main.ChoiceStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор студентов" Height="400" Width="840" FontSize="24" FontFamily="Courier New" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <DataGrid HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="255" Width="800" FontFamily="Courier New">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Width="*" FontWeight="Bold"/>

            </DataGrid.Columns>
        </DataGrid>
        <TextBlock HorizontalAlignment="Left" Margin="10,270,0,0" TextWrapping="Wrap" Text="Выбрано записей:" VerticalAlignment="Top" FontFamily="Courier New" FontWeight="Bold"/>
        <Button x:Name="ButClose" Content="Закрыть" HorizontalAlignment="Left" Margin="560,310,0,0" VerticalAlignment="Top" Width="250" FontSize="24" Height="50" FontFamily="Courier New" FontWeight="Bold" Click="ButClose_Click"/>

    </Grid>
</Window>
