<Window x:Class="Student_Achievements.MenuTeacher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Меню классного руководителя" Height="575" Width="635" FontFamily="Segoe UI" FontSize="22" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Icon="pack://siteoforigin:,,,/Resources/student-achievements-icon.png">
    <Grid>
        <Button x:Name="ButGroup" Content="Группа" Margin="10,120,10,0" VerticalAlignment="Top" Height="60" FontSize="22" FontFamily="Segoe UI" FontWeight="Bold" Click="ButGroup_Click" TabIndex="1"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <Border x:Name="border" Background="#FFAFD3E2" BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#146C94"/>
                            <Setter Property="Foreground" Value="White" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="ButStudent" Content="Студенты" Margin="10,190,10,0" VerticalAlignment="Top" Height="60" FontSize="22" FontFamily="Segoe UI" FontWeight="Bold" Click="ButStudent_Click" TabIndex="2"
                                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center">
